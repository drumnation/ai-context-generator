{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "sourceMap": true,
    "rootDir": "..",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": [
      "node",
      "jest",
      "vscode"
    ],
    "moduleResolution": "node"
  },
  "include": [
    "./**/*",
    "../**/__tests__/**/*",
    "../backend/**/*",
    "../di/**/*",
    "../test/**/*"
  ],
  "exclude": [
    "node_modules",
    ".vscode-test"
  ]
}