{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": [
      "ES2022",
      "dom"
    ],
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "out",
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
		"node_modules",
		".vscode-test",
		"src/webview"
	]
}